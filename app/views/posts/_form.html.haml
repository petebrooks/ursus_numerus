= form_for(@post) do |f|
  - if @post.errors.any?
    #error_explanation
      %h2
        = pluralize(@post.errors.count, "error")
        prohibited this post from being saved:
      %ul
        - @post.errors.full_messages.each do |message|
          %li= message
  = f.label :title
  = f.text_field :title
  = f.label :body
  = f.text_area :body, size: '100x6'
  .actions
    = f.submit

/ = simple_form_for @post do |f|
/   = f.input :title
/   = f.input :body
/   = f.input :all_tags, label: 'Tags'
/   = f.button :submit